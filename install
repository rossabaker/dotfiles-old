#!/usr/bin/env bash

set -e
DOTDIR=$(dirname $(readlink -f $0))

already_symlinked() {
    local source=$1
    local dest=$2
    [ "$(readlink $dest)" = "$DOTDIR/$source" ]
}

install_file() {
    local source=$1
    local dest=$HOME/$file
    if ! (already_symlinked $source $dest); then
        ln -sv $DOTDIR/$source $dest
    fi    
}

for file in * .[^.]*; do
    if [[ $file != install ]] && [[ $file != .git ]] && [[ $file != .gitignore ]] && [[ $file != *~ ]]; then
        install_file $file
    fi
done
